<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <title>{ifset title}{include title|striptags} | {/ifset}Pharmacy</title>

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.6/css/jquery.dataTables.css">

    <link rel="stylesheet" href="{$basePath}/css/layout.css">
    <link rel="stylesheet" href="{$basePath}/css/style.css">
    <link rel="shortcut icon" href="{$basePath}/favicon.ico">
    {block head}{/block}
</head>

<body>
    <!-- menu -->
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>                        
            </button>
              <a class="navbar-brand" n:href="Homepage:default"><img src="{$basePath}/images/logo_white.png" alt="Hlavní strana" title="Hlavní strana"></a>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
              {if $user->loggedIn}
                <!--<li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">Page 1 <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="#">Page 1-1</a></li>
                    <li><a href="#">Page 1-2</a></li>
                    <li><a href="#">Page 1-3</a></li>
                  </ul>
                </li>-->
                <li><a href="#">Pokladniční systém</a></li>
                <li><a href="#">Skladová evidencia</a></li>
                <li><a n:href="Statistika:default">Štatistika zamestnancov</a></li>
              {/if}
            </ul>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li>
                  {if $user->loggedIn}
                      <span class="user">Přihlášen jako <strong>{$user->id}</strong> | <a n:href="Sign:out">Odhlásit se</a></span>
                  {else}
                    <a n:href="Sign:in"><span class="glyphicon glyphicon-log-in"></span> Přihlásit se</a>
                  {/if}
              </li>
            </ul>
          </div>
        </div>
    </nav>

    <!-- flash message -->
    <div class="container">
        <div class="row">
            <div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
            
            <!-- content -->
            <div id="content">
                {if $user->loggedIn || $presenter->getName() == 'Sign'}
                    {include content}
                {else}
                    <p><a n:href="Sign:in"><span class="glyphicon glyphicon-log-in"></span> Přihlásit se</a></p>
                {/if}
            </div>
        </div>
    </div>
        
   


   <!-- scripts -->
    {block scripts}
        <script src="//nette.github.io/resources/js/netteForms.min.js"></script>
        <!-- DataTables --><script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.6/js/jquery.dataTables.js"></script>
        <script src="{$basePath}/js/main.js"></script>
        <script>$(document).ready(function () {
                $('#table_id').DataTable();
            });
        </script>
    {/block}
</body>
</html>
